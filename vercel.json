{
  "version": 2,
  "buildCommand": "nuxt generate",
  "outputDirectory": ".output/public",
  "github": {
    "silent": true
  },
  "rewrites": [
    {
      "source": "/talks/:match*",
      "destination": "https://talks-michaello.vercel.app/:match*"
    },
    {
      "source": "/projects/:project/:match*",
      "destination": "https://projects-:project.vercel.app/:match*"
    },
    {
      "source": "/projects/:project",
      "destination": "https://projects-:project.vercel.app"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
